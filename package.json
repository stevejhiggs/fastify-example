{
  "name": "fastify-example",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "watch": "./node_modules/.bin/nodemon -e ts,json --exec 'yarn run start'",
    "start": "node ./index.js | pino-pretty",
    "build": "tsc",
    "test:ci": "LOG_LEVEL=warn jest --collectCoverageFrom='src/**/*.ts' --coverage",
    "test": "LOG_LEVEL=warn jest --watch-all",
    "startProduction": "node lib/src/listener.js",
    "prettier": "./node_modules/.bin/prettier --write '**/*.{js,jsx,ts,tsx,css,html,yaml,json,md}'",
    "prettier:ci": "./node_modules/.bin/prettier --check '**/*.{js,jsx,ts,tsx,css,html,yaml,json,md}'",
    "eslint:ci": "eslint '**/*.{js,jsx,ts,tsx}'",
    "eslint": "eslint '**/*.{js,jsx,ts,tsx}' --fix",
    "lint": "yarn prettier && yarn eslint",
    "lint:ci": "yarn eslint:ci && yarn prettier:ci",
    "prepare": "husky install && rm -rf .git/hooks && ln -s ../.husky .git/hooks",
    "pre-commit": "yarn lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stevejhiggs/fastify-example.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stevejhiggs/fastify-example/issues"
  },
  "homepage": "https://github.com/stevejhiggs/fastify-example#readme",
  "dependencies": {
    "@fastify/helmet": "^10.0.2",
    "@fastify/swagger": "^8.0.0",
    "@fastify/swagger-ui": "^1.0.3",
    "@fastify/type-provider-typebox": "^2.3.0",
    "@sinclair/typebox": "^0.24.46",
    "fastify": "^4.8.1",
    "pino": "^8.6.1"
  },
  "devDependencies": {
    "@swc-node/register": "^1.5.4",
    "@swc/core": "^1.3.8",
    "@swc/jest": "^0.2.23",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unicorn": "^44.0.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "jest": "^29.2.0",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    }
  },
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules",
      "lib/**/*",
      "coverage/**/*"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "plugin:jest/recommended",
      "plugin:import/warnings",
      "plugin:unicorn/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "unused-imports",
      "unicorn"
    ],
    "rules": {
      "no-debugger": "error",
      "no-console": "error",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "react-hooks/exhaustive-deps": "off",
      "unused-imports/no-unused-imports-ts": "error",
      "import/order": "warn",
      "unicorn/prefer-node-protocol": "off"
    }
  },
  "prettier": {
    "printWidth": 250,
    "trailingComma": "none",
    "singleQuote": true
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{js,jsx,ts,tsx,css,html,yaml,json,md}": [
      "prettier --write"
    ]
  }
}
