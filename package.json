{
  "name": "fastify-example",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "watch": "./node_modules/.bin/nodemon -e ts,json --exec 'yarn run start'",
    "start": "node ./index.js | pino-pretty",
    "build": "tsc",
    "test:ci": "LOG_LEVEL=warn jest --collectCoverageFrom='src/**/*.ts' --coverage",
    "test": "LOG_LEVEL=warn jest --watchAll",
    "startProduction": "node lib/src/listener.js",
    "prettier": "./node_modules/.bin/prettier --write '**/*.{js,jsx,ts,tsx,css,html,yaml,json,md}'",
    "prettier:ci": "./node_modules/.bin/prettier --check '**/*.{js,jsx,ts,tsx,css,html,yaml,json,md}'",
    "eslint:ci": "eslint '**/*.{js,jsx,ts,tsx}'",
    "eslint": "eslint '**/*.{js,jsx,ts,tsx}' --fix",
    "lint": "yarn prettier && yarn eslint",
    "lint:ci": "yarn eslint:ci && yarn prettier:ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stevejhiggs/fastify-example.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stevejhiggs/fastify-example/issues"
  },
  "homepage": "https://github.com/stevejhiggs/fastify-example#readme",
  "dependencies": {
    "@sinclair/typebox": "^0.16.5",
    "fastify": "^3.15.0",
    "fastify-helmet": "^5.3.1",
    "fastify-oas": "^3.0.8",
    "pino": "^6.11.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "@types/pino": "^6.3.7",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-unicorn": "^30.0.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "husky": "4.x",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.7.1",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "prettier": {
    "printWidth": 250,
    "trailingComma": "none",
    "singleQuote": true
  },
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules",
      "lib/**/*",
      "coverage/**/*"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "plugin:jest/recommended",
      "plugin:import/warnings",
      "plugin:unicorn/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "unused-imports",
      "unicorn"
    ],
    "rules": {
      "no-debugger": "error",
      "no-console": "error",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "react-hooks/exhaustive-deps": "off",
      "unused-imports/no-unused-imports-ts": "error",
      "import/order": "warn"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{js,jsx,ts,tsx,css,html,yaml,json,md}": [
      "prettier --write"
    ]
  }
}
