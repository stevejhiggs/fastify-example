{
  "name": "fastify-example",
  "version": "1.0.0",
  "description": "",
  "main": "lib/listener.js",
  "type": "module",
  "scripts": {
    "watch": "node --import tsx --watch-path=./src ./index.ts | pino-pretty ",
    "start": "node --import tsx ./index.ts | pino-pretty",
    "start:production": "node lib/listener.js",
    "build": "tsc -p tsconfig.build.json",
    "test": "LOG_LEVEL=warn node --test --import tsx ./src/**/*.test.ts",
    "test:ci": "LOG_LEVEL=warn NODE_V8_COVERAGE=src node --test --experimental-test-coverage --import tsx ./src/**/*.test.ts",
    "typecheck": "tsc --noEmit",
    "format": "./node_modules/.bin/prettier --write '**/*.{js,jsx,ts,tsx,css,html,yaml,json,md}'",
    "lint:ci": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint": "pnpm run lint:ci --fix",
    "prepare": "husky install && rm -rf .git/hooks && ln -s ../.husky .git/hooks",
    "pre-commit": "pnpm lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stevejhiggs/fastify-example.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stevejhiggs/fastify-example/issues"
  },
  "homepage": "https://github.com/stevejhiggs/fastify-example#readme",
  "dependencies": {
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.12.1",
    "@fastify/swagger-ui": "^2.0.1",
    "@fastify/type-provider-typebox": "^3.5.0",
    "@sinclair/typebox": "0.31.28",
    "fastify": "^4.25.1",
    "pino": "^8.17.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-unicorn": "^50.0.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "pino-pretty": "^10.3.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules",
      "lib/**/*",
      "coverage/**/*"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "plugin:import/warnings",
      "plugin:unicorn/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "unused-imports",
      "unicorn"
    ],
    "rules": {
      "no-debugger": "error",
      "no-console": "error",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "react-hooks/exhaustive-deps": "off",
      "unused-imports/no-unused-imports-ts": "error",
      "import/order": "warn",
      "unicorn/prefer-node-protocol": "off"
    }
  },
  "prettier": {
    "printWidth": 250,
    "trailingComma": "none",
    "singleQuote": true
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{css,html,json,md}": [
      "prettier --write"
    ]
  }
}
