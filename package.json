{
  "name": "fastify-example",
  "version": "1.0.0",
  "description": "",
  "main": "lib/listener.js",
  "type": "module",
  "scripts": {
    "start": "bun ./index.ts | pino-pretty",
    "start:production": "bun ./index.ts",
    "build": "bun -b tsc -p tsconfig.build.json",
    "test": "LOG_LEVEL=warn bun test",
    "test:ci": "bun run test -- --coverage",
    "typecheck": "bun -b tsc --noEmit",
    "format": "bun -b prettier --write '**/*.{js,jsx,ts,tsx,css,html,yaml,json,md}'",
    "lint:ci": "bun -b eslint '**/*.{js,jsx,ts,tsx}'",
    "lint": "bun -b run lint:ci --fix",
    "prepare": "bun -b husky install && rm -rf .git/hooks && ln -s ../.husky .git/hooks",
    "pre-commit": "bun -b lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stevejhiggs/fastify-example.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stevejhiggs/fastify-example/issues"
  },
  "homepage": "https://github.com/stevejhiggs/fastify-example#readme",
  "dependencies": {
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@fastify/type-provider-typebox": "^4.0.0",
    "@sinclair/typebox": "0.32.26",
    "fastify": "^4.26.2",
    "pino": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^9.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unicorn": "^52.0.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "globals": "^15.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.3",
    "typescript": "^5.4.5"
  },
  "prettier": {
    "printWidth": 250,
    "trailingComma": "none",
    "singleQuote": true
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{css,html,json,md}": [
      "prettier --write"
    ]
  }
}
