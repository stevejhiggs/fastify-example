{
  "name": "fastify-example",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "watch": "./node_modules/.bin/nodemon -e ts,json --exec 'pnpm run start'",
    "start": "node ./index.js | pino-pretty",
    "start:production": "node lib/listener.js",
    "build": "tsc -p tsconfig.build.json",
    "test": "LOG_LEVEL=warn vitest --dir src",
    "test:ci": "pnpm run test -- --coverage",
    "typecheck": "tsc --noEmit",
    "format": "./node_modules/.bin/prettier --write '**/*.{js,jsx,ts,tsx,css,html,yaml,json,md}'",
    "lint:ci": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint": "pnpm run lint:ci --fix",
    "prepare": "husky install && rm -rf .git/hooks && ln -s ../.husky .git/hooks",
    "pre-commit": "pnpm lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stevejhiggs/fastify-example.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stevejhiggs/fastify-example/issues"
  },
  "homepage": "https://github.com/stevejhiggs/fastify-example#readme",
  "dependencies": {
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^1.10.1",
    "@fastify/type-provider-typebox": "^3.5.0",
    "@sinclair/typebox": "^0.31.18",
    "fastify": "^4.24.3",
    "pino": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.7",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@vitest/coverage-c8": "^0.28.3",
    "esbuild": "^0.19.5",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-unicorn": "^48.0.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.2.3",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules",
      "lib/**/*",
      "coverage/**/*"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "plugin:import/warnings",
      "plugin:unicorn/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "unused-imports",
      "unicorn"
    ],
    "rules": {
      "no-debugger": "error",
      "no-console": "error",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "react-hooks/exhaustive-deps": "off",
      "unused-imports/no-unused-imports-ts": "error",
      "import/order": "warn",
      "unicorn/prefer-node-protocol": "off"
    }
  },
  "prettier": {
    "printWidth": 250,
    "trailingComma": "none",
    "singleQuote": true
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{css,html,yaml,json,md}": [
      "prettier --write"
    ]
  }
}
