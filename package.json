{
  "name": "fastify-example",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "watch": "./node_modules/.bin/nodemon -e ts,json --exec 'yarn run start'",
    "start": "node ./index.js | pino-pretty",
    "build": "tsc",
    "test": "jest --collectCoverageFrom='src/**/*.ts' --coverage",
    "test:watch": "jest --collectCoverageFrom='src/**/*.ts' --watch",
    "startProduction": "node lib/src/listener.js",
    "prettier": "./node_modules/.bin/prettier --write '**/*.{js,jsx,ts,tsx,css,html,yaml,json,md}'",
    "prettier-check": "./node_modules/.bin/prettier --check '**/*.{js,jsx,ts,tsx,css,html,yaml,json,md}'",
    "eslint-check": "eslint '**/*.{js,jsx,ts,tsx}'",
    "eslint": "eslint '**/*.{js,jsx,ts,tsx}' --fix",
    "lint": "yarn prettier && yarn eslint",
    "lint-check": "yarn eslint-check && yarn prettier-check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stevejhiggs/fastify-example.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stevejhiggs/fastify-example/issues"
  },
  "homepage": "https://github.com/stevejhiggs/fastify-example#readme",
  "dependencies": {
    "@sinclair/typebox": "^0.12.7",
    "fastify": "^3.11.0",
    "fastify-helmet": "^5.2.0",
    "fastify-oas": "^3.0.8",
    "pino": "^6.11.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@types/pino": "^6.3.5",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-unused-imports": "^1.1.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.5.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.4"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "prettier": {
    "printWidth": 250,
    "trailingComma": "none",
    "singleQuote": true
  },
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules",
      "lib/**/*",
      "coverage/**/*"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended",
      "plugin:jest/recommended",
      "plugin:import/warnings"
    ],
    "plugins": [
      "@typescript-eslint",
      "unused-imports"
    ],
    "rules": {
      "no-debugger": "error",
      "no-console": "error",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "react-hooks/exhaustive-deps": "off",
      "unused-imports/no-unused-imports-ts": "error",
      "import/order": "warn"
    }
  }
}
